<div class="bg-gradient-to-br from-blue-50 to-indigo-100 min-h-screen">
  <div class="max-w-6xl mx-auto px-4 py-8">
    <!-- тљЇтЅЇУАеуц║сЂесЃюсѓ┐сЃ│сѓесЃфсѓб -->
    <div class="bg-white rounded-xl shadow-lg border border-gray-200 p-8 mb-8">
      <div class="flex items-center justify-between flex-wrap gap-4">
        <!-- тљЇтЅЇУАеуц║ -->
        <div class="flex items-center space-x-4">
          <div class="w-16 h-16 bg-gradient-to-r from-yellow-400 to-orange-500 rounded-full flex items-center justify-center">
            <span class="text-3xl">­ЪЉц</span>
          </div>
          <div>
            <p class="text-sm text-gray-500 font-medium mb-1">ТіЋуе┐УђЁ</p>
            <h2 class="text-3xl font-bold text-gray-800">
              <%= @user.name %>
            </h2>
          </div>
        </div>
        
        <!-- сЃюсѓ┐сЃ│сѓесЃфсѓб -->
        <div class="flex items-center space-x-4">
          <%= link_to users_path, class: "inline-flex items-center bg-gray-500 hover:bg-gray-600 text-white font-bold py-3 px-6 rounded-lg transition duration-300 shadow-md" do %>
            <span class="mr-2">Рєљ</span>
            <%= t('common.back_to_index') %>
          <% end %>
          
          <% if current_user == @user %>
            <%= link_to edit_user_path(@user), class: "inline-flex items-center bg-blue-500 hover:bg-blue-600 text-white font-bold py-3 px-6 rounded-lg transition duration-300 shadow-md" do %>
              <span class="mr-2">РюЈ№ИЈ</span>
              <%= t('common.edit') %>
            <% end %>
            <%= button_to @user, method: :delete, 
                          data: { turbo_confirm: "ТіЋуе┐сѓњтЅіжЎцсЂЌсЂдсѓѓсѓѕсѓЇсЂЌсЂёсЂДсЂЎсЂІ№╝Ъ" },
                          class: "inline-flex items-center bg-red-500 hover:bg-red-600 text-white font-bold py-3 px-6 rounded-lg transition duration-300 shadow-md" do %>
              <span class="mr-2">­ЪЌЉ№ИЈ</span>
              <%= t('common.delete') %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    
    <!-- тѕєТъљсѓесЃфсѓб -->
    <%= render 'pose/pose_button' %>
  </div>
</div>
