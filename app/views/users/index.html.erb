<div class="bg-gray-100 min-h-screen">
  <!-- 掲示板ヘッダー -->
  <div class="bg-white shadow-md border-b border-gray-200">
    <div class="container mx-auto px-4 py-6">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <div class="w-12 h-12 bg-yellow-400 rounded-lg flex items-center justify-center">
            <span class="text-2xl">📋</span>
          </div>
          <div>
            <h1 class="text-3xl font-bold text-gray-800">バク転掲示板</h1>
            <p class="text-gray-600">みんなのバク転写真をチェックしよう！</p>
          </div>
        </div>
        <div class="flex items-center space-x-4">
          <span class="text-sm text-gray-500">
            総投稿数: <%= @users.count %>件
          </span>
          <%= link_to "📸 新規投稿", new_user_path, 
                      class: "bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-3 px-6 rounded-lg transition duration-300 shadow-md flex items-center space-x-2" %>
        </div>
      </div>
    </div>
  </div>

  <!-- 掲示板コンテンツ -->
  <div class="container mx-auto px-4 py-8">
    <div id="users" class="space-y-4">
      <% @users.each do |user| %>
        <div class="hover:shadow-lg transition duration-300">
          <%= render user %>
          <div class="bg-white border-l-4 border-yellow-400 px-6 py-3 shadow-inner">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-4">
                <%= link_to t('.analysis'), user, 
                            class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded transition duration-300 inline-flex items-center space-x-2" %>
              </div>
              
              <% if current_user == user %>
                <div class="flex items-center space-x-2">
                  <%= link_to "✏️ 編集", edit_user_path(user), 
                              class: "bg-green-500 hover:bg-green-600 text-white text-sm py-1 px-3 rounded transition duration-300" %>
                  <%= button_to "🗑️ 削除", user, method: :delete, 
                                data: { turbo_confirm: "投稿を削除してもよろしいですか？" },
                                class: "bg-red-500 hover:bg-red-600 text-white text-sm py-1 px-3 rounded transition duration-300" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    
    <!-- 掲示板フッター -->
    <div class="mt-12 text-center">
      <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-yellow-400">
        <p class="text-gray-600 mb-4">
          あなたのバク転写真も投稿してみませんか？
        </p>
        <%= link_to "新しくバク転写真を投稿する", new_user_path, 
                    class: "bg-gradient-to-r from-yellow-400 to-orange-500 hover:from-yellow-500 hover:to-orange-600 text-white font-bold py-3 px-8 rounded-lg transition duration-300 shadow-md inline-flex items-center space-x-2" %>
      </div>
    </div>
  </div>
</div>

