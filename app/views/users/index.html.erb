<div class="container mx-auto px-4 py-8">
  <h1 class="text-4xl font-extrabold text-gray-800 mb-8"><%= t('.title') %></h1>

  <div class="mb-6">
    <%= link_to "新しくバク転写真を追加する", new_user_path, 
                class: "bg-orange-500 hover:bg-orange-600 text-white font-bold py-3 px-6 rounded-lg transition duration-300 shadow-md" %>
  </div>

  <div id="users" class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
    <% @users.each do |user| %>
      <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition duration-300">
        <%= render user %>
        <div class="mt-4">
          <%= link_to t('.analysis'), user, 
                      class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded transition duration-300" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

