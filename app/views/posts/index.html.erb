<div class="bg-gray-100 min-h-screen">
  <!-- 掲示板ヘッダー -->
  <div class="bg-white shadow-md border-b border-gray-200">
    <div class="container mx-auto px-4 py-6">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <div class="w-12 h-12 bg-yellow-400 rounded-lg flex items-center justify-center">
            <span class="text-2xl">📋</span>
          </div>
          <div>
            <h1 class="text-3xl font-bold text-gray-800">バク転掲示板</h1>
            <p class="text-gray-600">みんなのバク転写真をチェックしよう！</p>
          </div>
        </div>
        <div class="flex items-center space-x-4">
          <span class="text-sm text-gray-500">
            総投稿数: <%= @posts.count %>件
          </span>
          <%= link_to "📸 新規投稿", new_post_path, 
                      class: "bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-3 px-6 rounded-lg transition duration-300 shadow-md flex items-center space-x-2" %>
        </div>
      </div>
    </div>
  </div>

  <!-- 掲示板コンテンツ -->
  <div class="container mx-auto px-4 py-8">
    <div id="posts" class="space-y-4">
      <% @posts.each do |post| %>
        <div class="hover:shadow-lg transition duration-300">
          <%= render post %>
          <div class="bg-white border-l-4 border-yellow-400 px-6 py-6 shadow-inner">
            <div class="flex flex-col space-y-4">
              <!-- 診断ボタン（大きく目立つ） -->
              <div class="flex justify-center">
                <%= link_to post, class: "w-full max-w-md" do %>
                  <div class="bg-gradient-to-r from-blue-500 to-indigo-600 hover:from-blue-600 hover:to-indigo-700 text-white font-bold py-4 px-8 rounded-xl transition duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-1 text-center">
                    <div class="flex items-center justify-center space-x-3">
                      <span class="text-2xl">⬆️</span>
                      <span class="text-xl">診断する</span>
                    </div>
                  </div>
                <% end %>
              </div>
              
              <!-- 編集・削除ボタン -->
              <% if current_user && current_user.id == post.user_id %>
                <div class="flex items-center justify-center space-x-3 pt-2 border-t border-gray-200">
                  <%= link_to "✏️ 編集", edit_post_path(post), 
                              class: "bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-6 rounded-lg transition duration-300 shadow-md" %>
                  <%= button_to "🗑️ 削除", post, method: :delete, 
                                data: { turbo_confirm: "投稿を削除してもよろしいですか？" },
                                class: "bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-6 rounded-lg transition duration-300 shadow-md" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    
    <!-- 掲示板フッター -->
    <div class="mt-12 text-center">
      <div class="bg-white rounded-lg shadow-md p-6 border-l-4 border-yellow-400">
        <p class="text-gray-600 mb-4">
          あなたのバク転写真も投稿してみませんか？
        </p>
        <%= link_to "新しくバク転写真を投稿する", new_post_path, 
                    class: "bg-gradient-to-r from-yellow-400 to-orange-500 hover:from-yellow-500 hover:to-orange-600 text-white font-bold py-3 px-8 rounded-lg transition duration-300 shadow-md inline-flex items-center space-x-2" %>
      </div>
    </div>
  </div>
</div>
